@model IEnumerable<MVC5HW1.Models.客戶聯絡人>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "客戶聯絡人", FormMethod.Get))
    {
<p>
    職稱 @Html.DropDownList("Type", "All")
    @Html.TextBox("Name")
    <input type="submit" value="查詢" />
</p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("職稱", "Index", new { Order = ViewBag.職稱SortParm })
        </th>
        <th>
            @Html.ActionLink("姓名", "Index", new { Order = ViewBag.姓名SortParm })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { Order = ViewBag.EmailSortParm })
        </th>
        <th>
            @Html.ActionLink("手機", "Index", new { Order = ViewBag.手機SortParm })
